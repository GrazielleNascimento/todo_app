<div class="bg-gray-800 p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-indigo-300">Novo Projeto</h2>
  
  <%= form_with(model: @project) do |form| %>
    <% if @project.errors.any? %>
      <div class="bg-red-500 text-white p-4 rounded-md mb-6">
        <h3 class="font-bold mb-2">Foram encontrados <%= pluralize(@project.errors.count, "erro", "erros") %>:</h3>
        <ul class="list-disc list-inside">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-4">
      <%= form.label :title, "TÃ­tulo", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 rounded-md bg-gray-700 border border-gray-600 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    
    <div class="flex space-x-3">
      <%= form.submit "Criar Projeto", class: "bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-md" %>
      <%= link_to "Cancelar", projects_path, class: "bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-md text-white" %>
    </div>
  <% end %>
</div>